<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/detail_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="COIN"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">


            <TextView
                android:id="@+id/detail_item_opening_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="opening_price"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail_item_closing_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_item_opening_price"
                android:layout_marginTop="5dp"
                android:text="closing_price"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail_item_min_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_item_closing_price"
                android:layout_marginTop="5dp"
                android:text="min_price"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail_item_max_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_item_min_price"
                android:layout_marginTop="5dp"
                android:text="max_price"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail_item_units_traded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_item_max_price"
                android:layout_marginTop="5dp"
                android:text="units_traded"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail_item_acc_trade_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_item_units_traded"
                android:layout_marginTop="5dp"
                android:text="acc_trade_value"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail_item_prev_closing_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_item_acc_trade_value"
                android:layout_marginTop="5dp"
                android:text="prev_closing_price"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail_item_units_traded_24H"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_item_prev_closing_price"
                android:layout_marginTop="5dp"
                android:text="units_traded_24H"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail_item_acc_trade_value_24H"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_item_units_traded_24H"
                android:layout_marginTop="5dp"
                android:text="acc_trade_value_24H"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail_item_fluctate_24H"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_item_acc_trade_value_24H"
                android:layout_marginTop="5dp"
                android:text="fluctate_24H"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail_item_fluctate_rate_24H"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_item_fluctate_24H"
                android:layout_marginTop="5dp"
                android:text="fluctate_rate_24H"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_item_fluctate_rate_24H"
                android:layout_marginTop="5dp"
                android:text="date"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    card_view:cardBackgroundColor="#333333"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_cointitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:text="coin"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/item_opening_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="시가"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_closing_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_opening_price"
                android:layout_marginTop="5dp"
                android:text="현재가"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_units_traded_24H"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_closing_price"
                android:layout_marginTop="5dp"
                android:text="거래량"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_units_traded_24H"
                android:layout_marginTop="5dp"
                android:text="timestamp"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>